---
import "../styles/global.css";
import Header from "../components/navegation/Header.astro";
import Footer from "../components/navegation/Footer.astro";
import FooterBottom from "../components/navegation/FooterBottom.astro";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- <ViewTransition /> -->
    <!-- <ClientRouter /> -->
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
    <FooterBottom />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
