---
import Icon from "../ui/Icon.astro";
---

<footer id="footer" class="bg-secondary text-white px-6 py-16 rounded-t-4xl">
  <div
    class="container mx-auto max-w-screen-lg px-4 flex flex-col md:flex-row md:justify-between gap-12"
  >
    <!-- Contacto -->
    <div class="flex-1 flex flex-col gap-6">
      <h2 class="text-3xl font-bold text-left">Contacto</h2>

      <ul class="flex flex-col gap-6 md:gap-4 w-full">
        <li
          class="flex flex-col md:flex-row items-start gap-1 md:gap-2 text-left"
        >
          <Icon name="calendar" class="w-5 h-5" />
          <span>Lunes a Domingo de 11:00 am - 10:00 pm</span>
        </li>

        <li
          class="flex flex-col md:flex-row items-start gap-1 md:gap-2 text-left"
        >
          <Icon name="geo" class="size-10" />
          <a
            href="https://maps.app.goo.gl/xUMc9rSk52MibQwZ7"
            target="_blank"
            class="hover:underline break-words"
          >
            518, Av. Nichupté Supermanzana 51 Manzana 18, Sin Nombre, 77536 Cancún, Q.R.
          </a>
        </li>

        <li
          class="flex flex-col md:flex-row items-start gap-1 md:gap-2 text-left"
        >
          <Icon name="telephone" class="w-5 h-5" />
          <a href="tel:+529982061694" class="hover:underline">
            +52 (998)-206-1694
          </a>
        </li>
      </ul>
    </div>

    <!-- Mapa del Sitio -->
    <div class="flex-1 flex flex-col items-start gap-4">
      <h2 class="text-3xl font-bold text-left">Mapa del Sitio</h2>

      <ul class="flex flex-col gap-2 text-left">
        <li><a href="/" class="hover:underline">Inicio</a></li>
        <li><a href="/directorio" class="hover:underline">Directorio</a></li>
        <li><a href="/eventos" class="hover:underline">Eventos</a></li>
        <li><a href="/anuncios" class="hover:underline">Anuncios</a></li>
        <li><a href="#footer" class="hover:underline">Contacto</a></li>
      </ul>
    </div>

    <!-- Redes Sociales -->
    <div class="flex-1 flex flex-col items-start gap-4">
      <h2 class="text-3xl font-bold text-left">Síguenos</h2>

      <div class="flex space-x-4">
        <a
          href="https://www.facebook.com/cancungranplaza"
          target="_blank"
          class="hover:text-gray-300"
          aria-label="facebook"
        >
          <Icon name="facebook" class="w-6 h-6" />
        </a>
        <a
          href="https://www.instagram.com/cancungranplaza"
          target="_blank"
          class="hover:text-gray-300"
          aria-label="instagram"
        >
          <Icon name="instagram" class="w-6 h-6" />
        </a>
      </div>
    </div>
  </div>
</footer>
